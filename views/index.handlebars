<div class="container-fluid text-center bg-dark text-light p-5">
  <h1>Welcome to Burgers! NOM NOM NOM</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger-name">Burger Name:</label>
          <input type="text" id="burger-name" name="name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2>Ready-to-Eat Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>{{burger_name}}
          <button class="change-devour" data-id="{{id}}" data-devoured="true">EAT</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6">
      <h2>Burger Graveyard:</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>{{burger_name}}</li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>